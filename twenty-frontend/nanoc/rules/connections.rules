#!/usr/bin/env ruby

##
# GET /
compile '/html/connections/index.html.erb' do
  layout "/default.*"
  filter(:erb)
  write('/connections/index.html')
end

##
# GET /js/main/connections.js
compile("/js/main/connections.tsx") do
  filter(:webpack, depend_on: %w[/js/components/ /js/hooks/ /js/types/])
  write("/js/main/connections.js")
end
