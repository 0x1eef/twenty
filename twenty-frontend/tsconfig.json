{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "module": "commonjs",
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "allowJs": true,
    "lib": [ "ES2022", "DOM" ],
    "allowUmdGlobalAccess": true,
    "baseUrl": "./src",
    "paths": { "~/*": ["./js/*"] },
  }
}
